          <div class="side active">The active side</div>
          <div class="side">The second side</div>
        </div>
      </div>
    {{/ui-shape}}
  </div>
</div>

<div class="ui segment">
  <div class="ui header">
    Choose transition
  </div>

  <pre class="ui segment green">
      \{{#ui-shape buttonLabel='testLabel' transitionType='flip over'}}
        &lt;div class="ui shape"&gt;
          &lt;div class="sides"&gt;
            &lt;div class="side active"&gt;The active side&lt;/div&gt;
            &lt;div class="side"&gt;The second side&lt;/div&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      \{{/ui-shape}}
  </pre>
  <div class="ui segment grey">
